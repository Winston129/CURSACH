<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - cursach</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/cursach.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">A Scanner Darkly</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                       <!--
                           ..твытэжииииииииииииииииииииииииииииииииииииииииииииииииииииб.ю0щз=хджэ-
                        -->

                        <li class="nav-item">
                            <details class="nav-link text-dark">
                                <summary>Table view</summary>
                                    <ul>
                                        <li><a class="nav-link text-dark" asp-area="" asp-controller="Items" asp-action="">Item</a></li>
                                        <li><a class="nav-link text-dark" asp-area="" asp-controller="Clients" asp-action="">Client</a></li>
                                        <li><a class="nav-link text-dark" asp-area="" asp-controller="ItemTypes" asp-action="">Item Type</a></li>
                                        <li><a class="nav-link text-dark" asp-area="" asp-controller="Availables" asp-action="">Available</a></li>
                                        <li><a class="nav-link text-dark" asp-area="" asp-controller="Reserveds" asp-action="">Reserved</a></li>
                                        <li><a class="nav-link text-dark" asp-area="" asp-controller="Solds" asp-action="">Sold</a></li>
                                    </ul>
                            </details>
                        </li>

                        <li class="nav-item">
                            <details class="nav-link text-dark">
                                <summary>Create Items</summary>
                                    <ul>
                                        <li><a class="nav-link text-dark" asp-area="" asp-controller="Items" asp-action="Create">Item</a></li>
                                        <li><a class="nav-link text-dark" asp-area="" asp-controller="Clients" asp-action="Create">Client</a></li>
                                        <li><a class="nav-link text-dark" asp-area="" asp-controller="ItemTypes" asp-action="Create">Item Type</a></li>
                                        <li><a class="nav-link text-dark" asp-area="" asp-controller="Availables" asp-action="Create">Available</a></li>
                                        <li><a class="nav-link text-dark" asp-area="" asp-controller="Reserveds" asp-action="Create">Reserved</a></li>
                                        <li><a class="nav-link text-dark" asp-area="" asp-controller="Solds" asp-action="Create">Sold</a></li>
                                    </ul>
                            </details>
                        </li>

                        <li class="nav-item">
                            <details class="nav-link text-dark">
                                <summary>Detailed Info</summary>
                                    <ul>
                                        <li><a class="nav-link text-dark" asp-area="" asp-controller="Items" asp-action="SelectName">Item</a></li>
                                        <li><a class="nav-link text-dark" asp-area="" asp-controller="Clients" asp-action="SelectName">Client</a></li>
                                        <li><a class="nav-link text-dark" asp-area="" asp-controller="Reserveds" asp-action="SelectName">Reserved</a></li>
                                    </ul>
                            </details>
                        </li>

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - cursach - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
